
<div class="menu_haut">
  <ul>
    <li><a href="/vip">VIPS</a></li>
    <li class="traitVertical"><a href="/photo">PHOTO</a></li>
  </ul>
</div>
<div id="contenu">
    <br/>
    <br/>
    <div style="width: 100%; display:flex;">
        <div id='menu_admin_vip' style="width: 20%;">
            <div style='width:100%;width:50%;border-radius:1em 1em 0em 0em; border:1px solid black; background-color:black'>
                <img src="/images/vips.png" alt="VIPs" />
            </div>
            <div style="width:50%;border:1px solid white;background-color:black;height:3.5em;display:flex;align-items:center; justify-content:center;">
                    <a href='/ajoutVip' style='color:white; text-decoration:underline;'>AJOUTER</a>
            </div> 
            <div style="width:50%;border:1px solid white;background-color:black;height:3.5em;display:flex;align-items:center; justify-content:center;">
                    <a href='/modifVip' style='color:white; text-decoration:underline;'>MODIFIER</a>
            </div>
            <div style="width:50%;border:1px solid white;background-color:black;height:3.5em;display:flex;align-items:center; justify-content:center;">
                    <a href='/suppVip' style='color:white; text-decoration:underline;'>SUPPRIMER</a>
            </div>  

        </div>

        <div id='ajout_vip'style='width:80%'>
            {{#if msg}}
                <p>{{this.msg}}</p>
                <form action='/ajoutVip' class='form' method='POST' >
                    <input type='submit' name='input_ajout_vip' value='Continuer'>
                </form>
            {{else}}
                <fieldset style='width:100%'>
                    <legend style="text-align: left;">Ajout VIPs</legend>
                    <form action='/ajoutVip' class='form' method='POST' >
                        <table style='text-align:left;'>
                            <tr>
                                <td><label for='nom_vip'>Nom* :</label> </td>
                                <td><input type='text' name='nom_vip'></td>
                            </tr>
                            <tr>
                                <td><label for='prenom_vip'>Prénom* :</label> </td>
                                <td><input type='text' name='prenom_vip'></td>
                            </tr>
                            <tr>
                                <td><label for='sex_vip'>Sexe :</label> </td>
                                <td>
                                    <select name="sex_vip">
                                        <option value="M">Masculin</option>
                                        <option value="F">Féminin</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td><label for='date_naiss_vip'>Date de naissance :</label> </td>
                                <td><input type='date' name='date_naiss_vip'></td>
                            </tr>
                            <tr>
                                <td><label for='nat_vip'>Nationalité :</label> </td>
                                <td>
                                    <select name="nat_vip">
                                        {{#if nationalites}}
                                            {{#each nationalites}}
                                                <option value="{{this.NATIONALITE_NUMERO}}">{{this.NATIONALITE_NOM}}</option>
                                            {{/each}}
                                        {{/if}}
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td><label for='com_vip'>Commentaire :</label> </td>
                                <td><input type='text' name='com_vip'></td>
                            </tr>
                            <tr>
                                <td><label for='image_vip'>Sélectionner l'image :</label> </td>
                                <td><input type='file' name='image_vip' accept="image/png, image/jpeg"></td>
                                <td><label for='sujet_vip'>Sujet :</label> </td>
                                <td><input type='text' name='sujet_vip'></td>
                            </tr><tr>
                                <td><input type='submit' name='input_ajout_vip' value='Ajouter le vip'></td>
                            </tr>
                        </table>
                    </form>
                </fieldset>
            {{/if}}
        </div>
    </div>
</div>